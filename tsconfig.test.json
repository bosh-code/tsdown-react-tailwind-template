{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "@testing-library/jest-dom",
      "vitest",
      "vitest/globals"
    ],
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@radix-ui/react-slot": [
        "./node_modules/@bosh-code/preact-slot"
      ],
      "react": [
        "./node_modules/preact/compat/"
      ],
      "react/jsx-runtime": [
        "./node_modules/preact/jsx-runtime"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ],
      "react-dom/*": [
        "./node_modules/preact/compat/*"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
